<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss} %level] %logger{0} :: %msg%n"/>
        </Console>

        <RollingRandomAccessFile name="File" fileName="logs/latest.log" filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger{1}]: %replace{%msg}{(?i)\u00A7[0-9A-FK-OR]}{}%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <OnStartupTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Logger name="tfe.core" level="all" additivity="false">
            <AppenderRef ref="Console" level="debug"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="com.zaxxer.hikari" level="info" additivity="false">
            <AppenderRef ref="Console" level="warn"/>
            <AppenderRef ref="File"/>
        </Logger>
        
        <Logger name="com.corundumstudio.socketio" level="info" additivity="false">
            <AppenderRef ref="Console" level="warn"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="Console" level="info"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>